@model IEnumerable<InManSys.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<h2>Suppliers</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Add New Supplier</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Supplier ID</th>
            <th>Supplier Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SupplierId</td>
                <td>@item.SupplierName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SupplierId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.SupplierId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
